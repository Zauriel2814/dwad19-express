{{#extends 'base'}}

{{#block "content"}}
<h1>Food Records</h1>
<a href="/add-food" class="btn btn-primary">Add Food</a>
<table class="table">
    <!-- table header -->
    <thead>
        <!-- table row -->
        <tr>
            <!-- table header -->
            <th>ID</th>
            <th>Food Name</th>
            <th>Calories</th>
            <th>Meal</th>
            <th>Tags</th>
            <th></th>
        </tr>
    </thead>
    <!-- actual content of the table is -->
    <!-- table body -->
    <tbody>
        {{#each foodRecords}}
        <tr>
            <!-- one table column -->
            <td>{{this.id}}</td>
            <td>{{this.foodName}}</td>
            <td>{{this.calories}}</td>
            <td>{{this.meal}}</td>
            <td>{{this.tags}}</td>
            <td>
                <a href="/update-food/{{this.id}}" class="btn btn-primary btn-sm">Edit</a>
                <a href="/delete-food/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}